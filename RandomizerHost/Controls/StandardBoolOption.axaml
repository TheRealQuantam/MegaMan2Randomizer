<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ctls="using:RandomizerHost.Controls"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="30"
             x:Class="RandomizerHost.Controls.StandardBoolOption"
             DataContext="{Binding $self.Option}"
             >
  <StackPanel
    Orientation="Horizontal"
    IsVisible="{Binding Info.CreateControl}"
    IsEnabled="{Binding !Override}"
  >
    <!-- Supposedly putting a tooltip on a parent control is supposed to make it show up when the child control is disabled, but that doesn't seem to work, so don't bother. -->

    <ctls:StandardOptionRandomSlider/>
    <CheckBox
      Name="Value"
      Content="{Binding Info.Description}"
      ToolTip.Tip="{Binding Info.Tooltip}"
      IsEnabled="{Binding !UiRandomize}"
      IsChecked="{Binding UiValue}"
    />
  </StackPanel>
</UserControl>
